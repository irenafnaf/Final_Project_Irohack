<div class="clients-buttons-bar">

	<div class="new-project-slider closed" id="new-project-slider">
		<input type="image" src= "/assets/newproject_button.png" id="js-newproject"></input> 
	</div>	

	<div class="slider" id="slider">
			<img src= "/assets/client_projects_button.png" id="js-client-projects-button">
	</div>	
</div>

<div class="newproject-form" >
	<p class="headline">Create Your New Project</p>
		<form id="js-newproject-form" data-client="<%=@client.id%>">
			<input id="js-name" type="text" class="js-required" name="name" placeholder="Enter Name"> 
			<br>
			<div id="js-dropdowns">
				<select id="js-one-dropdown" data-dropdown="0" class="js-required form-control" style="width:60%;">
					  <% @types.each do |type| %>
					  <option id="js-type" value="<%=type.id%>"> <%=type.name%> </option>
					  <% end %> 
				</select>
				
			</div>
			<p class="add-type"> Add Type </p>

			<input id="js-description" type="text" class="js-required" name="description" placeholder="Description"> 
			<br>
			<input id="js-due_date" type="date" class="js-required" name="due_date" placeholder="Due Date">
			<br>

			<button id="js-submit" type="submit" value="Submit"> Submit </button>
		</form> 
</div>

<div class="client-projects-slider closed" id="client-projects-slider" data-client="<%=@client.id%>"> 
	<div class="project-whiteDiv">
		<ul  class="clients-projects">
		</ul>
	</div>
</div>

<div class="client-project-main-display-slider closed" id="client-project-main-display-slider">
	<div class="project-info">

	</div>
	
	<div class="imagesDiv">
		<div class="title-div">
		</div>
		<div class="thumbnailGalleryDiv">
		</div>
	</div>

	<div class="clientsCommentsDiv">
	</div>
</div>

<div class="bottom-nav-bar">
	<input type="image" src= "/assets/logout_button.png" class="logout"> </input> 
</div>


<div class="modal fade" id="imagemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="width: 70%;">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel" style="text-align: center;">Preview</h4>
      </div>
      <div class="modal-body">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default modal-close" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>